<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="18dp"
    android:background="#070606"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageGreenFlag"
        android:layout_width="306dp"
        android:layout_height="97dp"
        app:srcCompat="@drawable/logo_green_flag"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request a rescue online"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="131dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policy information"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="GreenFlag customers can create an account to access"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="201dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/tick" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Car health updates"
            android:textColor="#FAF7F6"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/imageButton"
            android:layout_width="306dp"
            android:layout_height="97dp"
            android:background="@drawable/gradient_button_background"
            android:clickable="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="13dp"
                android:text="Create an account"
                android:textColor="#403434"
                android:textSize="17sp" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tick"
        tools:layout_editor_absoluteX="98dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tick"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>